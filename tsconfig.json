{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", // Должно быть "NodeNext" (с большой буквы)
    "moduleResolution": "node", // Аналогично
    "baseUrl": "./src",
    "paths": {
      "@services/*": ["services/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
